{
  "name": "kframework-js",
  "version": "0.1.0",
  "description": "TypeScript/JavaScript library for K Framework functionality",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build:clean && bun run build:tsc",
    "build:clean": "rm -rf dist",
    "build:tsc": "tsc --project tsconfig.build.json",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "test:unit": "bun test src/tests/unit",
    "test:integration": "bun test src/tests/integration",
    "lint": "tsc --noEmit",
    "dev": "bun run --watch src/index.ts"
  },
  "keywords": [
    "k-framework",
    "formal-verification",
    "ast",
    "symbolic-execution",
    "typescript",
    "javascript"
  ],
  "author": "K Framework Team",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kframework/kframework-js.git"
  },
  "bugs": {
    "url": "https://github.com/kframework/kframework-js/issues"
  },
  "homepage": "https://github.com/kframework/kframework-js#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "tar": "^7.4.3"
  }
}
