{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Enable compilation output
    "noEmit": false,
    "emitDeclarationOnly": false,
    
    // Output configuration
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // Module resolution for Node.js
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    
    // Ensure compatibility
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "dist",
    "pyk",
    "pyk_tests"
  ]
}
